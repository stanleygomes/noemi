# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{kt,kts}]
indent_size = 4

[*.gradle.kts]
indent_size = 4

[*.json]
indent_size = 2

[*.xml]
indent_size = 2
